  <%@ page import="java.sql.*" %>
<%
Connection conn = null;
PreparedStatement stmt = null;
ResultSet rs = null;
String email = (String) request.getSession().getAttribute("email"); // assuming you store the email in the session

String oldPassword = request.getParameter("current_password"); // changed parameter name to match form input name
String newPassword = request.getParameter("new_password"); // changed parameter name to match form input name
String confirmPassword = request.getParameter("confirm_password"); // changed parameter name to match form input name

boolean success = false;
String errorMessage = "";

if (email != null) {
    try {
        Class.forName("com.mysql.jdbc.Driver");
        conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/appointment_db", "root", "root");
        
        // Check if the old password is correct
        stmt = conn.prepareStatement("SELECT password FROM users WHERE email=?");
        stmt.setString(1, email);
        rs = stmt.executeQuery();
        
        if (rs.next()) {
            String savedPassword = rs.getString("password");
            
            if (oldPassword.equals(savedPassword)) {
                // Update the password
                if (newPassword.equals(confirmPassword)) {
                    stmt = conn.prepareStatement("UPDATE users SET password=? WHERE email=?");
                    stmt.setString(1, newPassword);
                    stmt.setString(2, email);
                    stmt.executeUpdate();
                    success = true;
                } else {
                    errorMessage = "New password and confirm password do not match";
                }
            } else {
                errorMessage = "Current password is incorrect";
            }
        }
        
    } catch (ClassNotFoundException e) {
        e.printStackTrace();
    } catch (SQLException e) {
        e.printStackTrace();
    } finally {
        if (rs != null) {
            try {
                rs.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        if (stmt != null) {
            try {
                stmt.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        if (conn != null) {
            try {
                conn.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
}

if (success) {
    response.sendRedirect("user_dashboard.jsp");
} else {
%>

<script>
    alert("<%=errorMessage%>");
    window.history.back();
</script>

<% } %>

